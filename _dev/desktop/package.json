{
  "name": "timetested-bible",
  "version": "2.0.0",
  "description": "Time Tested Bible Study App",
  "main": "main.js",
  "scripts": {
    "start": "unset ELECTRON_RUN_AS_NODE && electron .",
    "start:dev": "unset ELECTRON_RUN_AS_NODE && electron . --dev",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "author": {
    "name": "Time Tested",
    "email": "app@timetested.bible"
  },
  "homepage": "https://timetested.bible",
  "license": "MIT",
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.timetested.bible",
    "productName": "Time Tested Bible",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js"
    ],
    "extraResources": [
      {
        "from": "../../",
        "to": "app",
        "filter": [
          "**/*",
          "!_dev/**",
          "!.git/**",
          "!.github/**",
          "!.cursor/**",
          "!node_modules/**",
          "!scripts/**",
          "!tests/**",
          "!source/**",
          "!docs/**",
          "!**/*.py",
          "!**/*.sh",
          "!**/.DS_Store",
          "!**/package-lock.json"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.reference",
      "icon": "../../icons/icon-512.png",
      "target": ["dmg", "zip"],
      "identity": null
    },
    "win": {
      "icon": "../../icons/icon-512.png",
      "target": ["nsis", "portable"]
    },
    "linux": {
      "icon": "../../icons/icon-512.png",
      "target": ["AppImage", "deb"],
      "category": "Education"
    }
  }
}
