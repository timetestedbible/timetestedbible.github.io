---
layout: null
---
[
  {% for chapter in site.chapters %}
  {
    "title": "{{ chapter.title | escape }}",
    "url": "{{ chapter.url }}",
    "content": {{ chapter.content | strip_html | strip_newlines | jsonify }},
    "type": "chapter"
  }{% unless forloop.last %},{% endunless %}
  {% endfor %}
  {% if site.chapters.size > 0 and site.facts.size > 0 %},{% endif %}
  {% for fact in site.facts %}
  {
    "title": "{{ fact.title | escape }}",
    "url": "{{ fact.url }}",
    "content": "{{ fact.statement | escape }} {{ fact.evidence | join: ' ' | escape }}",
    "type": "fact"
  }{% unless forloop.last %},{% endunless %}
  {% endfor %}
  {% if site.facts.size > 0 and site.extras.size > 0 %},{% endif %}
  {% for extra in site.extras %}
  {
    "title": "{{ extra.title | escape }}",
    "url": "{{ extra.url }}",
    "content": {{ extra.content | strip_html | strip_newlines | jsonify }},
    "type": "extra"
  }{% unless forloop.last %},{% endunless %}
  {% endfor %}
]
