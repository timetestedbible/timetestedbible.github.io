{
  "name": "timetested-bible",
  "version": "1.0.0",
  "description": "Time Tested Bible Study App",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "author": "Time Tested",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.timetested.bible",
    "productName": "Time Tested Bible",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js"
    ],
    "extraResources": [
      {
        "from": "../http/_site",
        "to": "app",
        "filter": ["**/*", "!**/*.py", "!**/scripts/**"]
      }
    ],
    "mac": {
      "category": "public.app-category.reference",
      "icon": "../http/icons/icon-512.png",
      "target": ["dmg", "zip"]
    },
    "win": {
      "icon": "../http/icons/icon-512.png",
      "target": ["nsis", "portable"]
    },
    "linux": {
      "icon": "../http/icons/icon-512.png",
      "target": ["AppImage", "deb"],
      "category": "Education"
    }
  }
}
